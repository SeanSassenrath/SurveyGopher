
<h1 style="text-align:center">Welcome <%=current_user.name%></h1>
<h1>Surveys you created!</h1>
<ul>
  <% @surveys.each do |survey| %>
  <%= erb :'survey', layout: false, locals: { survey: survey} %>
  <% end %>
</ul>

<form class="logout_button" action="/user/:id" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Log Out"/>
</form>


<a href="/user/<%=current_user.id%>/survey">Create Survey!</a>
